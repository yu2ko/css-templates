{{!-- <div class='page'> --}}
  {{!-- <div class='page_content'> --}}
	{{!-- <header class='page_block'> --}}
		<header class='header'>
			{{!-- <div class=''> --}}
				{{> logo}}
			{{!-- </div> --}}
			
			<nav class='header_nav'>
				<div class="header_nav_right">
					{{> nav list=header}}
				</div>
			</nav>
		</header>
	{{!-- </header> --}}
	
	{{#with hero}}
		<div class="hero">
			<div class="hero_content">
				<h1 class="hero_title">{{title}}</h1>
				<p class="hero_text">{{text}}</p>
			</div>
			<img src="{{photo}}" alt="Hero photo" class="hero_image">
		</div>
	{{/with}}

	<main class="blog">
		{{#each blog}}
		{{> cardBlog data=this}}
		{{!-- <div class="card">
			<div class="card_image" style="background-image: url({{img}})"></div>
			<h2 class="card_title">{{title}}</h2>
			<p class="card_text">{{text}}</p>
			<a href="" class="card_button" href="{{href}}">{{button}}</a>
		</div> --}}
		{{/each}}
	</main>

	{{#with form}}
	<div class="form">
		<div class="form_content">
			<h3 class="form_title">{{title}}</h3>
			<p class="form_info">{{info}}</p>
		</div>
		<div class="form_action">
			<a href="{{href}}" class="button form_button">{{button}}</a>
		</div>
	</div>
	{{/with}}

	{{!-- <footer class="page_block"> --}}
		<footer class="footer">
			<div>
				{{> logo}}
				<span class="footer_copyright">Copyright 2023-2024</span>
			</div>
			
			{{#each footer}}
			<div>
				<span class="footer_title">{{title}}</span>
				{{> nav list=links isVertical=true}}
			</div>
			{{/each}}
		</footer>
	{{!-- </footer> --}}
  {{!-- </div> --}}
{{!-- </div> --}}